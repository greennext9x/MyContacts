<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <ImageView
        style="@style/ImageView"
        android:id="@+id/imgName"
        android:src="@drawable/ic_name_black_24dp" />
    <EditText
        style="@style/EditText"
        android:id="@+id/edtName"
        android:hint="Name"
        android:layout_alignBaseline="@id/imgName" />
    <ImageView
        style="@style/ImageView"
        android:id="@+id/imgPhone"
        android:src="@drawable/ic_call_black_24dp"
        android:layout_below="@id/imgName" />
    <EditText
        style="@style/EditText"
        android:id="@+id/edtPhone"
        android:hint="Phone"
        android:layout_alignBaseline="@id/imgPhone"
        android:layout_below="@id/edtName" />

    <ImageView
        style="@style/ImageView"
        android:id="@+id/imgEmail"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_below="@id/imgPhone" />
    <EditText
        style="@style/EditText"
        android:id="@+id/edtEmail"
        android:hint="Email"
        android:layout_alignBaseline="@id/imgEmail"
        android:layout_below="@id/edtPhone" />

    <ImageView
        style="@style/ImageView"
        android:id="@+id/imgAddress"
        android:src="@drawable/ic_place_black_24dp"
        android:layout_below="@id/imgEmail" />
    <EditText
        style="@style/EditText"
        android:id="@+id/edtAddress"
        android:hint="Address"
        android:layout_alignBaseline="@id/imgAddress"
        android:layout_below="@id/edtEmail" />

    <ImageView
        style="@style/ImageView"
        android:id="@+id/imgNote"
        android:src="@drawable/ic_import_contacts_black_24dp"
        android:layout_below="@id/imgAddress" />
    <EditText
        style="@style/EditText"
        android:id="@+id/edtNote"
        android:hint="Add Note"
        android:layout_alignBaseline="@id/imgNote"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_below="@id/edtAddress" />

</RelativeLayout>